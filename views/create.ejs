<% layout('layout') -%>
<section class="space-y-6">
  <a href="/" class="flex items-center gap-2 text-gray-300 hover:text-white transition mb-4">
    <i class="fas fa-chevron-left"></i>
    Kembali
  </a>

  <form action="/snippets" method="POST" class="glass-effect border border-gray-600/30 rounded-xl p-6 space-y-6" autocomplete="off">
    <h2 class="text-2xl font-bold text-white">Buat New Code</h2>

    <div>
      <label for="title" class="block text-sm font-medium mb-2 text-gray-300">Code Judul</label>
      <input id="title" name="title" type="text" required
        class="w-full glass-effect border border-gray-600/50 rounded-lg px-4 py-3 focus:outline-none focus:border-emerald-400 transition"
        placeholder="Contoh : Scrape ai , fitur bot wa" />
    </div>

    <div>
      <label for="description" class="block text-sm font-medium mb-2 text-gray-300">Deskripsi</label>
      <textarea id="description" name="description" rows="3"
        class="w-full glass-effect border border-gray-600/50 rounded-lg px-4 py-3 focus:outline-none focus:border-emerald-400 transition"
        placeholder="masukan deskripsi code tersebut...."></textarea>
    </div>

    <div>
      <label for="code" class="block text-sm font-medium mb-2 text-gray-300">Code</label>
      <textarea id="code" name="code" required
        class="w-full h-64 font-mono text-sm glass-effect border border-gray-600/50 rounded-lg px-4 py-3 focus:outline-none focus:border-emerald-400 transition custom-scrollbar"
        placeholder="Masukan Code disini..."></textarea>
    </div>

    <div>
      <label for="language" class="block text-sm font-medium text-gray-300 mb-2">Bahasa</label>
      <select id="language" name="language"
        class="w-full sm:w-1/3 glass-effect border border-gray-600/50 rounded-lg px-4 py-3 focus:outline-none focus:border-emerald-400 transition">
        <% const langs = ['plaintext','javascript','typescript','python','java','c','cpp','go','rust','ruby','php','bash','json','html','css']; %>
        <% langs.forEach(function(lang){ %>
          <option value="<%= lang %>"><%= lang %></option>
        <% }) %>
      </select>
    </div>

    <div class="flex justify-end space-x-3 pt-4 border-t border-gray-700/50">
      <a href="/" class="bg-gray-700/50 hover:bg-gray-600/50 text-white px-5 py-2.5 rounded-lg text-sm font-semibold transition">Cancel</a>
      <button type="submit" class="bg-gradient-to-r from-emerald-500 to-emerald-600 hover:from-emerald-600 hover:to-emerald-700 text-white px-5 py-2.5 rounded-lg flex items-center gap-2 transition shadow-lg hover:shadow-emerald-500/25 text-sm font-semibold">
        Save Snippet
      </button>
    </div>
  </form>
</section>
