<% layout('layout') -%>
<section>
  <% if (!snippets || !snippets.length) { %>
    <div class="col-span-full text-center py-16">
      <h3 class="text-xl text-gray-400">No snippets yet.</h3>
      <p class="text-gray-500">Click "New Snippet" to get started!</p>
    </div>
  <% } %>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% (snippets || []).forEach(function(s){ %>
      <a class="glass-effect border border-gray-600/30 rounded-xl p-6 flex flex-col justify-between hover:border-emerald-400/50 transition-all duration-300 group" href="/view/<%= s._id %>">
        <div>
          <div class="flex justify-between items-start mb-2">
            <h3 class="text-lg font-bold text-white group-hover:text-emerald-400 transition"><%= s.title %></h3>
            <span class="bg-gray-700/50 text-emerald-400 text-xs font-mono font-semibold px-2.5 py-1 rounded-full"><%= s.language %></span>
          </div>
          <% if (s.description) { %>
            <p class="text-gray-400 text-sm mb-4 line-clamp-2"><%= s.description %></p>
          <% } %>
        </div>
        <div class="text-xs text-gray-500 flex justify-between items-center pt-4 border-t border-gray-700/50">
          <span>
            By <span class="font-semibold text-gray-400"><%= s.createdBy?.username || 'anon' %></span>
          </span>
          <span><%= new Date(s.createdAt).toLocaleDateString() %></span>
        </div>
      </a>
    <% }) %>
  </div>
</section>
